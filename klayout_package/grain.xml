<?xml version="1.0"?>
<package>
  <name>klab</name>
  <version>0.1.0</version>
  <description>A package for controlling measurement instruments like SMUs and motor controllers from within KLayout.</description>
  <author>Juan Villegas</author>
  <category>macros</category>
  <maintainer>jev1@nyu.edu</maintainer>
  <license></license>

  <!-- This tells KLayout that this package contains Python code -->
  <language>python</language>

  <!-- Files included in the package -->
  <files>
    <!-- Core installation and package definition -->
    <file>pymacros/install.py</file>
    <file>requirements.txt</file>
    <file>pyproject.toml</file>
    
    <!-- The main Python package source -->
    <file>python/klab/__init__.py</file>
    <file>python/klab/instrument.py</file>
    
    <!-- Plugin-specific UI components -->
    <file>python/klab/plugin/__init__.py</file>
    <file>python/klab/plugin/menu.py</file>
    <file>python/klab/plugin/measurement_tab.py</file>
    
    <!-- Instrument drivers -->
    <file>python/klab/drivers/__init__.py</file>
    <file>python/klab/drivers/keithley_2450.py</file>
    <file>python/klab/drivers/standa_8smc4.py</file>
    <file>python/klab/drivers/scpi_vna.py</file>
    <file>python/klab/drivers/e5071c.py</file>
    
    <!-- Technology and configuration files -->
    <file>tech/default.yml</file>
    <file>tech/scpi_map.yml</file>
    <file>tech/keithley_2450.yml</file>
    <file>tech/e5071c_vna.yml</file>
    
    <!-- Documentation and Examples -->
    <file>docs/README.md</file>
    <file>examples/example_keithley_usage.py</file>
  </files>
  
  <dependencies></dependencies>
</package>
